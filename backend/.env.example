# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=info

# Database
DATABASE_URL=postgresql://zenith_user:zenith_dev_password@localhost:5432/zenith_pdf
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# AWS S3 / MinIO (for local dev)
S3_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_BUCKET=zenith-pdf-documents
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_FORCE_PATH_STYLE=true

# File Upload Limits
MAX_FILE_SIZE=52428800
MAX_FILES_PER_USER=100

# Rate Limiting
RATE_LIMIT_UPLOADS_PER_HOUR=10
RATE_LIMIT_API_PER_MINUTE=100
RATE_LIMIT_WEBSOCKET_PER_SECOND=10

# CORS
CORS_ORIGIN=http://localhost:5173

# WebSocket
WS_HEARTBEAT_INTERVAL=30000
WS_HEARTBEAT_TIMEOUT=5000
